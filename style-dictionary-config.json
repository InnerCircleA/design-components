{
  "source": ["./dist/design-tokens.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./styles/",
      "prefix": "token",
      "files": [{
        "destination": "variables.scss",
        "format": "scss/variables"
      }]
    },
    "js": {
      "transformGroup": "js",
      "buildPath": "./styles/",
      "files": [{
        "destination": "variables.js",
        "format": "javascript/es6"
      }]
    }
  }
}
